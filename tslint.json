{
  "extends": ["tslint:recommended", "tslint-config-prettier"],
  "rulesDirectory": [
    "src"
  ],
  "rules": {
    "max-line-length": {
      "options": [
        120
      ]
    },
    "new-parens": true,
    "no-arg": true,
    "no-bitwise": true,
    "no-conditional-assignment": true,
    "no-consecutive-blank-lines": false,
    "no-console": false,
    "interface-name": false,
    "quotemark": [
      true,
      "single"
    ]
  },
  "jsRules": {
    "max-line-length": {
      "options": [
        120
      ]
    }
  }
}
